{% extends 'admin/layout.njk' %}

{% block content %}

    <section class="links-titulo-admin">
        <div class="titulo-admin">
            <p>Gerenciar receitas</p>
        </div>
        <a href="/admin/criar">Novo</a>
    </section>

    <div class="list-receitas">

        {% for recipe in recipes %}
            <div class="admin-receita" id="{{recipe.id}}">
                <img src="{{recipe.image}}" alt="">
                <div class="list-info">
                    <h3>{{recipe.title}}</h3>
                    <p>{{recipe.author}}</p>
                    <a href="/admin/prato/{{receita.id}}">Visualizar</a>
                </div>
            </div>
        {% endfor %}

    </div>

{% endblock %}