{% extends "admin/layout.njk" %}

{% block head %}
    <title>{{recipe.title}} | Admin</title>
{% endblock %}

{% block content %}

    <div class="container-header-exibe-prato">
        <div>
            <h3>Receita: {{recipe.title}}</h3>
            <a href="/admin/prato/{{ recipe.id }}/edit">Editar receita</a>
        </div>
        
    </div>

    <div class="prato-centro">
        <img src="{{recipe.image}}" alt="Imagem do prato {{recipe.title}}">
    </div>
    
    <div class="prato-titulo">
        <h3>{{recipe.title}}</h3>
        <p>{{recipe.chef_name}}</p>
    </div>
    
    <div class="showHide">
        <div class="sub-titulos">
            <div class="grid-ing">
                <h3>Ingredientes</h3>
                <h4>ESCONDER</h4>
            </div>
        </div>

        <div class="conteudo-text" id="ingredientes">
            <ul>
                {# {% for ingredient in recipe.ingredients %} #}
                    <li>{{recipe.ingredients}}</li>
                {# {% endfor %} #}
            </ul>
        </div>
    </div>

    <div class="showHide">
        <div class="sub-titulos">
            <div class="grid-preparo">
                <h3>Modo de preparo</h3>
                <h4>ESCONDER</h4>
            </div>
        </div>

        <div class="conteudo-text" id="preparo">
            <ul>
                {# {% for preparation1 in recipe.preparation %} #}
                    <li>{{recipe.preparation}}</li>
                {# {% endfor %} #}
            </ul>
        </div>
    </div>

    <div class="showHide">
        <div class="sub-titulos">
            <div class="grid-info">
                <h3>Informações adicionais</h3>
                <h4>ESCONDER</h4>
            </div>
        </div>

        <div class="conteudo-text" id="infoAd">
            <p>{{recipe.information}}</p>
        </div>
    </div>

    <div class="desde">
        <p>Cadastrado em: {{recipe.created_at}}</p>
    </div>

{% endblock %}