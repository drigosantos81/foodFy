{% extends "admin/layout.njk" %}

{% block head %}
    <title>{{chef.name}} | Admin</title>
{% endblock %}

{% block content %}

    <div class="container-header-exibe-prato">
        <div>
            <h3>Chef: {{chef.name}}</h3>
            <a href="/admin/prato/{{ recipe.id }}/edit">Editar Chef</a>
        </div>
        
    </div>

    <div class="chef-centro">
        <img src="{{chef.avatar_url}}" alt="Imagem do prato {{chef.avatar_url}}">
    </div>
    
    <div class="prato-titulo">
        <h3>{{chef.name}}</h3>
        <p>{{chef.total_recipes}}
            {% if chef.total_recipes > 1 %}
                 receitas
                 {% else %} receita{% endif %}</p>
    </div>
    
    <div class="showHide">
        <div class="sub-titulos">
            <div class="grid-info">
                <h3>Receitas</h3>
            </div>
        </div>

        <div class="conteudo-text" id="infoAd">
            <p>{{recipe.information}}</p>
        </div>
    </div>

    <div class="desde">
        <p>Cadastrado em: {{chef.created_at}}</p>
    </div>

{% endblock %}