{% extends "layoutFF.njk" %}

{% block content %}

<div class="grid-divisoria">
    <p>Receitas</p>
</div>

<div class="grid-menu legendas sub-legendas">
    {% for item in items %}
        <div class="grid-prato-rec" id="{{item.id}}">
            <img src="/{{item.id}}.png" alt="{{item.title}}">
            <h4>{{item.title}}</h4>
            <p>{{item.author}}</p>
        </div>
    {% endfor %}
</div>

<script src="/scripts.js"></script>

{% endblock %}
